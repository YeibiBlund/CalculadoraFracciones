<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B1A1A"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/f2Numerador"
        android:layout_width="84dp"
        android:layout_height="48dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#00FFFFFF"
        android:ems="10"
        android:inputType="number"
        android:text="3"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.732"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo" />

    <EditText
        android:id="@+id/f2Denominador"
        android:layout_width="84dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#00FFFFFF"
        android:ems="10"
        android:inputType="number"
        android:text="8"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.732"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2" />

    <View
        android:id="@+id/divider2"
        android:layout_width="80dp"
        android:layout_height="3dp"
        android:layout_marginTop="4dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.737"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/f2Numerador" />

    <EditText
        android:id="@+id/f1Numerador"
        android:layout_width="84dp"
        android:layout_height="48dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#00FFFFFF"
        android:ems="10"
        android:inputType="number"
        android:text="2"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.291"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo" />

    <EditText
        android:id="@+id/f1Denominador"
        android:layout_width="84dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#00FFFFFF"
        android:ems="10"
        android:inputType="number"
        android:text="4"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.291"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <View
        android:id="@+id/divider"
        android:layout_width="80dp"
        android:layout_height="3dp"
        android:layout_marginTop="4dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="#FDFDFD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.287"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/f1Numerador" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="275dp"
        android:layout_height="55dp"
        android:layout_marginTop="28dp"
        android:background="#BEE465"
        android:fontFamily="serif"
        android:text="CALCULADORA DE FRACCIONES"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bReset"
        android:layout_width="410dp"
        android:layout_height="57dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#7E2323"
        android:text="Clear"
        app:circularflow_defaultRadius="1dp"
        app:cornerRadius="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/f3Denominador"
        app:layout_constraintVertical_bias="1.0" />

    <RadioGroup
        android:id="@+id/rgOperaciones"
        android:layout_width="385dp"
        android:layout_height="83dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="4dp"
        android:background="@android:drawable/gallery_thumb"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/f1Denominador"
        android:theme="@style/AppTheme">

        <RadioButton
            android:id="@+id/rbSuma"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginEnd="3dp"
            android:background="#152577"
            android:backgroundTint="#0F2E77"
            android:text="+"
            android:textAlignment="center"
            android:textColor="#EFEFEF"
            android:textSize="34sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbResta"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginEnd="3dp"
            android:background="#152577"
            android:text="-"
            android:textAlignment="center"
            android:textColor="#FDFDFD"
            android:textSize="34sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbMultiplicacion"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginEnd="3dp"
            android:background="#152577"
            android:text="x"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbDivision"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:background="#152577"
            android:text="/"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold" />
    </RadioGroup>


    <Button
        android:id="@+id/bEjecutar"
        android:layout_width="129dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#7E2323"
        android:text="Calcular"
        android:textSize="10sp"
        android:textStyle="bold"
        app:cornerRadius="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgOperaciones"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="1dp" />

    <LinearLayout
        android:layout_width="173dp"
        android:layout_height="210dp"
        android:background="@android:drawable/gallery_thumb"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/bReset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bEjecutar">

        <TextView
            android:id="@+id/f3Numerador"
            android:layout_width="104dp"
            android:layout_height="42dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider3"
            android:layout_width="124dp"
            android:layout_height="3dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="16dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="#FFFFFF" />

        <TextView
            android:id="@+id/f3Denominador"
            android:layout_width="108dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>